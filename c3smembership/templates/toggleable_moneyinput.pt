<span tal:define="oid oid|field.oid;
                  name name|field.name;
                  mask_options mask_options|'{}';
                  style style|field.widget.style;
                  css_class css_class|field.widget.css_class;
                  style style|field.widget.style|False"
      tal:omit-tag="">
    <input type="text" name="${name}" value="${cstruct}"
           tal:attributes="style style;
                           class string: form-control ${css_class}"
           id="${oid}"/>
    <script type="text/javascript">
      deform.addCallback(
         '${oid}',
         function (oid) {
            $("#" + oid).maskMoney(${mask_options});
         });
         function toggle_moneyinput(value){
            let custom_div = document.getElementById('item-membership_custom_fee');
            custom_div.style.display = (value=='sustaining') ? 'block' : 'none' ;
          }
    </script>
</span>
